
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Control de Usuarios</h2>
<div class="row">
    <div class="col">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header"><center><h5>Usuarios del sistema</h5></center></div>
            <div class="card-body text-dark">
                <h5 class="card-title">Usuarios</h5>
                <p class="card-text">Agregar, Actualiza,Visualiza o Elimina un Usuario</p>
                <a asp-area="Usuarios" asp-controller="TUsuarios" asp-action="Index" class="btn btn-primary btn-lg">Catalogo Usuarios</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header"><center><h5>Roles Del Sistema</h5></center></div>
            <div class="card-body text-dark">
                <h5 class="card-title">Roles</h5>
                <p class="card-text">Agregar, Actualiza,Visualiza o Elimina Un Rol</p>
                <a asp-area="Usuarios" asp-controller="TUsuarios" asp-action="Index" class="btn btn-primary btn-lg">Roles</a>
            </div>
        </div>
    </div>
</div>