@model IEnumerable<ProyectoGiasaWeb.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Catalogo De Productos</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.desProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.desProducto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idProducto" class="btn btn-outline-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idProducto" class="btn btn-outline-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.idProducto" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Regresa" class="btn btn-primary"> Atras</a>
</div>